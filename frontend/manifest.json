{
  "manifest_version": 3,

  "name": "HandsFree Type",
  "version": "1.0",
  "description": "Uses OpenAI for dictation.",
  "minimum_chrome_version": "116",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "offscreen",
    "tabs",
    "identity"
  ],
  
    "commands": {
    "toggle-dictation": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "Alt+Shift+D"
      },
      "description": "Start or stop dictation."
    }
  },

  "host_permissions": [
    "https://asia-northeast1-handsfreetype.cloudfunctions.net/*"
  ],

  "oauth2": {
    "client_id": "3445912363-j8esr7apo0jqr8ch87t9odau6l71jhj7.apps.googleusercontent.com",
    "scopes": ["email", "profile", "openid"]
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://www.googleapis.com https://securetoken.googleapis.com https://identitytoolkit.googleapis.com https://asia-northeast1-handsfreetype.cloudfunctions.net https://*.firebaseapp.com"
  },

  "background": {
    "service_worker": "dist/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "handsfree-128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "offscreen.html",
        "offscreen.js",
        "request-mic.html",
        "request-mic.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "128": "icon.png"
  }
}
